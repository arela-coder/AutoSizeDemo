<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="485dp"
        android:layout_height="304dp"
        android:layout_marginTop="45dp"
        android:background="@color/purple_200" />

    <RelativeLayout
        android:layout_width="485dp"
        android:layout_height="355dp"
        android:layout_marginTop="364dp"
        android:background="@color/design_default_color_secondary" />

    <TextureView
        android:id="@+id/launcher"
        android:layout_width="861dp"
        android:layout_height="555dp"
        android:layout_marginLeft="497dp"
        android:layout_marginTop="59dp" />

    <RelativeLayout
        android:id="@+id/static_launcher"
        android:layout_width="861dp"
        android:layout_height="555dp"
        android:layout_marginLeft="497dp"
        android:layout_marginTop="59dp"
        android:background="@color/black"
        android:backgroundTint="@color/purple_500"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/launcher_bg"
        android:layout_width="871dp"
        android:layout_height="565dp"
        android:layout_marginLeft="492dp"
        android:layout_marginTop="54dp"
        android:background="@color/black"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="530dp"
        android:layout_height="660dp"
        android:layout_marginLeft="1369dp"
        android:layout_marginTop="60dp"
        android:background="@color/teal_700" />

    <Button
        android:id="@+id/btn_vehicle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1369dp"
        android:layout_marginTop="60dp"
        android:background="@color/teal_200"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/media"
        android:layout_width="530dp"
        android:layout_height="402dp"
        android:layout_marginLeft="1369dp"
        android:layout_marginTop="60dp"
        android:background="@color/purple_700" />

    <RelativeLayout
        android:id="@+id/brand"
        android:layout_width="530dp"
        android:layout_height="335dp"
        android:layout_marginLeft="1369dp"
        android:layout_marginTop="385dp"
        android:background="#33333333" />


    <TextView
        android:layout_width="861dp"
        android:layout_height="555dp"
        android:layout_alignLeft="@id/launcher"
        android:layout_alignTop="@id/launcher"
        android:gravity="center"
        android:text="Hello world"
        android:textColor="@color/white"
        android:textSize="40sp" />
</RelativeLayout>