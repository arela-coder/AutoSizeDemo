<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <ImageView
        android:layout_width="@dimen/width_180_dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_56_dp"
        android:layout_marginBottom="@dimen/height_60_dp"
        android:src="@drawable/ic_bg_main_menu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_menu"
        android:layout_width="@dimen/width_180_dp"
        android:layout_height="@dimen/height_720_dp" />


    <LinearLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/width_210_dp"
        android:orientation="horizontal">

        <include
            layout="@layout/fragment_screen_mode_autosize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/device_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/dpi_test"
        android:textColor="#883333"
        android:textSize="@dimen/sp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>