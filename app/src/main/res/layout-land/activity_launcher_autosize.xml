<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/left_top"
        android:layout_width="485dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:background="@color/purple_200"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="485dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/purple_500"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left_top" />


    <RelativeLayout
        android:id="@+id/static_launcher"
        android:layout_width="900dp"
        android:layout_height="0dp"
        android:layout_marginLeft="485dp"
        android:background="@drawable/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintLeft_toLeftOf="@id/left_top"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/media"
        android:layout_width="512dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:background="@color/teal_200"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toRightOf="@+id/static_launcher"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/brand"
        android:layout_width="512dp"
        android:layout_height="0dp"
        android:background="#55123456"
        app:layout_constraintHeight_percent=".45"
        app:layout_constraintLeft_toRightOf="@id/static_launcher"
        app:layout_constraintTop_toBottomOf="@+id/media" />

    <TextView
        android:id="@+id/device_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/dpi_test"
        android:textColor="#0000CD"
        android:textSize="40sp" />
</androidx.constraintlayout.widget.ConstraintLayout>
